<!-- app/views/products/index.html.erb -->

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center mb-6">Products</h1>

  </br>
  
  <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price General</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price Group 1</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price Group 2</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Price Sale</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">On Sale?</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Photo</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Meta Description</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Meta Keywords</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @products.each do |product| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= product.code %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.description %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.category %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.price_general %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.price_group_1 %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.price_group_2 %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.price_sale %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.on_sale %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.product_photo %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.meta_description %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= product.meta_keywords %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  </br>

  <div class="mt-6 text-center">
    <%= link_to 'Upload New Product File', new_product_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-black bg-indigo-600 hover:bg-indigo-700" %>
  </div>
</div>
